


<div class="row">
  <div class="col-sm-6">
    <h1>Pages</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_page_path, class: 'btn btn-primary' do %>
    Add New Page
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Body</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <%= content_tag :tr, id: dom_id(page), class: dom_class(page) do %>
          

                      <td><%= page.title %></td>
                      <td><%= page.body %></td>
          
          
            <td><%= link_to 'Show', page %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
